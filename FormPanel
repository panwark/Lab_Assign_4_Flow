    private void Last_Name_InputKeyReleased(java.awt.event.KeyEvent evt) {                                            
        // TODO add your handling code here:
        Pattern pattern=Pattern.compile("^[a-zA-Z+ ]{1,30}$");
        Matcher matcher=pattern.matcher(Last_Name_Input.getText());
        boolean Validation =matcher.find();
        if (!Validation){Last_Name_Validation.setText("Last name Invalid");}
        else{Last_Name_Validation.setText(null);}
    }                                           

    private void Age_InputActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void Age_InputKeyReleased(java.awt.event.KeyEvent evt) {                                      
        // TODO add your handling code here:
        Pattern pattern=Pattern.compile("^[0-9]{1,3}$");
        Matcher matcher=pattern.matcher((Age_Input.getText()));
        boolean Validation =matcher.find();
        if (!Validation){Age_Validation.setText("Invalid age");}
        else{Age_Validation.setText(null);}
    }                                     

    private void Email_InputKeyReleased(java.awt.event.KeyEvent evt) {                                        
        // TODO add your handling code here:
        String regex="^[A-Za-z0-9+._-]+[@]{1}+[a-zA-Z0-9]+[.]{1}+[a-zA-Z]{0,10}$";
        Pattern pattern=Pattern.compile(regex);
        Matcher matcher=pattern.matcher((Email_Input.getText()));
        //boolean Validation =matcher.matches();
        if (!matcher.matches()){Email_Validation.setText("Invalid email");}
        else{Email_Validation.setText(null);}
    }                                       

