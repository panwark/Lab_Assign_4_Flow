    private void First_Name_InputKeyReleased(java.awt.event.KeyEvent evt) {                                             
        // TODO add your handling code here:
        Pattern pattern=Pattern.compile("^[a-zA-Z+ ]{1,30}$");
        Matcher matcher=pattern.matcher(First_Name_Input.getText());
        boolean Validation =matcher.find();
        if (!Validation){First_Name_Validation.setText("First name Invalid");}
        else{First_Name_Validation.setText(null);}
    }                                            

    private void First_Name_InputKeyTyped(java.awt.event.KeyEvent evt) {                                          
        // TODO add your handling code here:
        //String valid_str= "^[a-zA-z]$";

    }                                         

    private void Submit_ButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:

        String Fname=First_Name_Input.getText();
        String Lname=Last_Name_Input.getText();
        String Age= Age_Input.getText().toString();
        String Email=Email_Input.getText().toString();
        String Message=Message_Input.getText().toString();
        String Gender=Gender_button_group.getSelection().getActionCommand();
        String PatientType=Patient_Type_Combo_Box.getSelectedItem().toString();
        System.out.println(Gender);

    //if(Button_Group_Validation!=null){    
        if(First_Name_Validation.getText()==null)
        {
            if(Last_Name_Validation.getText()==null)
            {
                if(Age_Validation.getText()==null)
                {
                    if(Email_Validation.getText()==null)
                    {
                
                        User NewUser=new User();
                        NewUser.setFirstName(Fname);
                        NewUser.setLastName(Lname);
                        NewUser.setAge(Age);
                        NewUser.setEmail(Email);
                        NewUser.setGender(Gender);
                        NewUser.setMessage(Message);
                        NewUser.setPatientType(PatientType);
                        //JOptionPane.showMessageDialog(this,"First Name is "+Fname+". "+"Last Name is "+Lname+". "+"Age is "+Age+". "+"Email is "+Email+" And the message is "+Message , "User Validation Complete", HEIGHT);
                        
                        //
                        ViewPanel newViewPanel= new ViewPanel(NewUser);
                        BottomPanel.add(newViewPanel);
                        CardLayout layout=(CardLayout) BottomPanel.getLayout();
                        layout.next(BottomPanel);
                        
                    }
                    else{JOptionPane.showMessageDialog(this, "Please enter valid details", "Error", HEIGHT);}
                }
                else{JOptionPane.showMessageDialog(this, "Please enter valid details", "Error", HEIGHT);}
            }
            else{JOptionPane.showMessageDialog(this, "Please enter valid details", "Error", HEIGHT);}
        }
        else{JOptionPane.showMessageDialog(this, "Please enter valid details", "Error", HEIGHT);}
    //} 
    //else{JOptionPane.showMessageDialog(this, "Please enter valid details", "Error", HEIGHT);}
    }                                             

